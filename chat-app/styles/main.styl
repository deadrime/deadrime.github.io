inner_w = 1268px

body, html
  margin 0
  padding 0
  min-width inner_w

.button
  display inline-block

.page
  &__title
    font-family: Montserrat;
    font-style: normal;
    font-weight: normal;
    line-height: normal;
    font-size: 36px;
    color: #434343;
    text-align center

.header
  background: linear-gradient(289.95deg, #764BA2 -38.36%, #667EEA 61.64%);
  min-height 522px
  display flex
  flex-direction column
  &__inner
    padding 0 48px
    position relative
    display flex
    justify-content space-between
    height 100%
    min-height: inherit;
  &__text
    padding-top 172px
  &__title
    margin-top 0
    margin-bottom: 24px;
    font-family: Montserrat;
    font-weight normal
    font-size: 36px;
    color: #FFF;
  &__description
    font-family: Open Sans;
    font-size: 24px;
    margin-bottom: 24px;
    color: #FFF;
    font-style: normal;
    font-weight: normal;
    line-height: normal;
  &__iphone
    display flex
    flex-direction column
    justify-content flex-end
    position: absolute;
    right: -23px;
    bottom: 0;
  &__buttons
    display flex
    .button
      padding-right 24px

.inner
  width 100%
  height 100%
  max-width inner_w
  margin 0 auto
  display flex
  flex-direction column
  min-height: inherit;


.top-nav
  display flex
  position absolute
  z-index 1
  padding 20px 47px 0 47px
  align-items: center;
  &__logo
    width 144px
    height: 40px
    font-family: Montserrat, sans-serif;
    font-weight: 500;
    font-size: 32px;
    color: #FFF;
    text-decoration none
  &__menu
    display flex
    list-style none
    margin 0
    padding 0
    &>li
      &>a
        font-family: Open Sans;
        font-size: 18px;
        color: #FFF;
        text-decoration none
        padding-left 52px


.features
  padding-bottom 44px
  &__container
    display flex
    padding: 0 48px;
    justify-content: space-between;
  &__title
    margin-top 56px
    margin-bottom 58px

.feature
  height 428px
  display flex
  flex-direction column
  align-items center
  position relative
  &__img
    width 300px
    height 250px
    display: flex;
    justify-content: center;
    align-items: flex-end;
    background: linear-gradient(309.95deg, #764BA2 -8.76%, #667EEA 91.24%);
    border-radius: 25px;
    overflow: hidden;
  &__title
    font-family: Montserrat;
    font-style: normal;
    font-weight: normal;
    line-height: normal;
    font-size: 30px;
    color: #434343;
    margin-top 32px
  &__description
    position: absolute;
    margin 0
    width: 395px;
    height: 99px;
    font-family: Open Sans;
    font-style: normal;
    font-weight: normal;
    line-height: normal;
    font-size: 24px;
    text-align: center;
    color: #676767;
    bottom 0


.work
